<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BookOrUpdateFlightDetailsActivity">


    <TextView
        android:id="@+id/text_view_booked_flight_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flight_name"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_a_number_if_kid_s"
        />

    <NumberPicker
        android:id="@+id/number_picker_adults"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_a_number_if_adult_s"
        />
    <NumberPicker
        android:id="@+id/number_picker_children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/travel_from"
        android:layout_marginBottom="5dp"
        />
    <Spinner
        android:id="@+id/spinner_travel_from"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/travel_to"
        android:layout_marginBottom="5dp"
        />
    <Spinner
        android:id="@+id/spinner_travel_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/edit_text_depart_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/depart_date_hint"
        android:inputType="textMultiLine"/>
    <EditText
        android:id="@+id/edit_text_arrive_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/arrive_date_hint"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/button_save_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_btn"
         />


</LinearLayout>
</ScrollView>