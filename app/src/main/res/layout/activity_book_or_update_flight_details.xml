<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BookOrUpdateFlightDetailsActivity">


    <TextView
        android:id="@+id/text_view_booked_flight_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Name:"
        android:layout_marginTop="8dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        />

    <NumberPicker
        android:id="@+id/number_picker_adults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <NumberPicker
        android:id="@+id/number_picker_children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_text_chidlren_base_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Base price for kids"
        android:inputType="text"/>














    <!-- Text Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Travel from:"
        android:layout_marginBottom="5dp"
        />
    <Spinner
        android:id="@+id/spinner_travel_from"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Travel to:"
        android:layout_marginBottom="5dp"
        />
    <Spinner
        android:id="@+id/spinner_travel_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



















    <EditText
        android:id="@+id/edit_text_depart_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Depart date"
        android:inputType="textMultiLine"/>
    <EditText
        android:id="@+id/edit_text_arrive_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Arrive date:"
        android:inputType="textMultiLine"/>

    <Button
        android:id="@+id/button_save_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK"
         />


</LinearLayout>
</ScrollView>